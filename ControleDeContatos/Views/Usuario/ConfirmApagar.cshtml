@model UsuarioModel
@{
    ViewData["Title"] = "Confirma apagar usuário -";
}

<div class="text-center">
    <h3>Deseja realmente excluir o usuário( @Model.Nome )?</h3>
</div>

<a role="button" class="btn btn-danger w-100" asp-route-id="@Model.Id" asp-controller="Usuario" asp-action="Apagar">Confirmar exclusão</a>
<a role="button" class="btn btn-primary w-100 mt-1" asp-controller="Usuario" asp-action="Index">Cancelar exclusão</a>